{
    "schemaVersion": 1,
    "id": "camerapture",
    "version": "${version}",
    "name": "Camerapture",
    "description": "Take photos and display pictures in Minecraft",
    "authors": ["chrrrs"],
    "contact": {
        "homepage": "https://modrinth.com/mod/camerapture",
        "sources": "https://github.com/chrrs/camerapture",
        "issues": "https://github.com/chrrs/camerapture/issues"
    },
    "license": "MIT",
    "icon": "assets/camerapture/icon.png",
    "mixins": [{
        "config": "camerapture.mixins.json",
        "environment": "client"
    }],
    "environment": "*",
    "entrypoints": {
        "client": ["me.chrr.camerapture.CameraptureClient"],
        "main": ["me.chrr.camerapture.Camerapture"],
        "jade": ["me.chrr.camerapture.compat.JadePlugin"]
    },
    "depends": {
        "fabricloader": ">=${loader_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}"
    }
}
